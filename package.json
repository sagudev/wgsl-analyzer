{
  "name": "wgsl-lang",
  "displayName": "WGSL Language Support",
  "description": "",
  "version": "0.3.1",
  "publisher": "noah-labrecque",
  "repository": {
    "type": "github",
    "url": "https://github.com/unfinishedprogram/wgsl-analyzer"
  },
  "engines": {
    "vscode": "^1.79.0"
  },
  "icon": "icon.png",
  "scripts": {
    "vscode:prepublish": "npm run build",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node --minify",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "build-wasm": "wasm-pack build ./wgsl-language-server --target nodejs --out-dir ../dist",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "server": "esbuild ./src/server/index.ts --bundle --outfile=dist/server.js --format=cjs --minify --platform=node",
    "test-compile": "tsc -p ./",
    "build": "npm run build-wasm; npm run server; npm run esbuild-base",
    "publish": "vsce publish"
  },
  "main": "./dist/extension.js",
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "wgsl",
    "webgpu",
    "wgpu",
    "shader",
    "bevy"
  ],
  "contributes": {
    "languages": [
      {
        "id": "wgsl",
        "aliases": [
          "wgsl",
          "wgsl"
        ],
        "extensions": [
          "wgsl"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "wgsl",
        "scopeName": "text.wgsl",
        "path": "./syntaxes/wgsl.tmLanguage.json"
      }
    ]
  },
  "devDependencies": {
    "@types/node": "^20.3.1",
    "esbuild": "^0.18.9",
    "vscode": "^1.1.37"
  },
  "dependencies": {
    "vscode-languageclient": "^8.1.0",
    "vscode-languageserver": "^8.1.0"
  }
}